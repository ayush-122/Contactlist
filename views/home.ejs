<html>
    <head>
      <title> <%=title %></title>
      <script src="https://kit.fontawesome.com/a4b353c693.js" crossorigin="anonymous"></script>
      <link rel="stylesheet" type="text/css" href="/css/home.css"
    </head>

    <body>

      <h1 id="page-heading"><i class="fas fa-address-book"></i>My Contacts list</h1>
       <div id="contact-list-container">
      <ul>
        <% for(let i of contact_list){%>
          
         <li class="contact">
          <div class="details">
          <p><%= i.name %></p>
          <p><%= i.phone %></p>
        </div>  

        <div class="delete-button">
          <a href ="/contact-delete/?id=<%=i._id %>">

            <i class="fas fa-remove"></i>
          </a>

       </div>
        </li>
      
       
        <%}%>
      </ul>
      </div>
       <form class="contact-form" action ="/create-contact" method="POST">
        
        <input type="text" name="name" placeholder="Name">
        <input type ="number" name="phone" placeholder ="Phone number">
         <button type="submit">Add Contact</button>
       </form>
    </body> 

    <script type="text/javascript" src="/js/home.js"></script>
</html>